<!DOCTYPE html>
<html>
<head>
  <title>Number APIs</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f0f0f0; }
    h2 { color: #333; }
    .output { background: #fff; padding: 15px; margin: 10px 0; border-radius: 8px; }
    button { padding: 10px 15px; margin: 5px; cursor: pointer; }
  </style>
</head>
<body>

  <h2>Fibonacci and Even Numbers API</h2>

  <button onclick="fetchFibonacci()">Get Fibonacci Numbers</button>
  <div class="output" id="fibonacciOutput"></div>

  <button onclick="fetchEven()">Get Even Numbers</button>
  <div class="output" id="evenOutput"></div>

  <script>
    function fetchFibonacci() {
      fetch('http://20.244.56.144/evaluation-service/fibo')
        .then(response => response.json())
        .then(data => {
          document.getElementById("fibonacciOutput").innerText = 
            "Fibonacci Numbers: " + data.numbers.join(", ");
        })
        .catch(error => {
          document.getElementById("fibonacciOutput").innerText = "Error fetching Fibonacci numbers.";
          console.error(error);
        });
    }

    function fetchEven() {
      fetch('http://20.244.56.144/evaluation-service/even')
        .then(response => response.json())
        .then(data => {
          document.getElementById("evenOutput").innerText = 
            "Even Numbers: " + data.numbers.join(", ");
        })
        .catch(error => {
          document.getElementById("evenOutput").innerText = "Error fetching even numbers.";
          console.error(error);
        });
    }
  </script>

</body>
</html>
